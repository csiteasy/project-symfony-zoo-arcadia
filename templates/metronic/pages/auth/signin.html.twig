{% extends "#{theme.getParameter('KT_THEME_LAYOUT_DIR')}/_auth.html.twig" %}

{% block page_title %}Signin{% endblock %}

{% block content %}

    <!--begin::Form-->
    <form class="form w-100" novalidate="novalidate"  method="post">
        <!--begin::Heading-->
        <div class="text-center mb-11">
            <!--begin::Title-->
            <h1 class="text-gray-900 fw-bolder mb-3">
                Se connecter
            </h1>
            <!--end::Title-->

            <!--begin::Subtitle-->
            <div class="text-gray-500 fw-semibold fs-6">
                Zoo Arcadia Admin
            </div>
            <!--end::Subtitle--->
        </div>
        <!--begin::Heading-->
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <!--begin::Input group--->
        <div class="fv-row mb-8">
            <!--begin::Email-->

                <input id="inputEmail" type="text" value="{{ last_username }}" placeholder="Email" name="email" autocomplete="off" class="form-control bg-transparent"/>

                <!--end::Email-->
        </div>

        <!--end::Input group--->
        <div class="fv-row mb-3">
            <!--begin::Password-->

                <input id="inputPassword" type="password" placeholder="Password" name="password" autocomplete="off" class="form-control bg-transparent "/>

            <!--end::Password-->
        </div>
        <div class="fv-row mb-3">
            <label>
                <input type="checkbox" name="_remember_me" class="form-checkbox bg-transparent"> Remember me
            </label>
        </div>
        <!--end::Input group--->
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <!--begin::Wrapper-->
        <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
            <div></div>

            <!--begin::Link-->
            <a href="/reset-password" class="link-primary">
                Forgot Password ?
            </a>
            <!--end::Link-->
        </div>
        <!--end::Wrapper-->

        <!--begin::Submit button-->
        <div class="d-grid mb-10">
            <button type="submit" class="btn btn-primary">
                {% include 'metronic/partials/general/_button-indicator.html.twig' with {label: 'Se connecter'} %}
            </button>
        </div>
        <!--end::Submit button-->


    </form>
    <!--end::Form-->

{% endblock %}