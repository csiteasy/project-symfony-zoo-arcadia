{{ form_start(form) }}
    {{ form_widget(form) }}


<div class="animal-images d-flex flex-wrap">
    {% for image in animal.images %}
        <div class="animal-image d-flex flex-column align-items-center m-2">
            <img src="{{ asset('images/' ~ image.filename ~ '-thumb.' ~ image.extension) }}" alt=""/>
            <label>
                <input type="checkbox" name="delete_images[]" value="{{ image.id }}">
                Supprimer cette image
            </label>
        </div>
    {% endfor %}
</div>

<div class="d-flex justify-content-end">
    <button class="btn btn-primary m-1" name="save_and_exit">{{ button_save_and_exit|default('Sauvegarder et quitter') }}</button>
    {% if button_save_and_continue is defined and button_save_and_continue is not empty %}
        <button class="btn btn-secondary m-1" name="save_and_continue">{{ button_save_and_continue }}</button>
    {% endif %}
    <a href="{{ path('app_admin_animal') }}" class="btn btn-secondary m-1">Retour</a>
</div>
{{ form_end(form) }}
