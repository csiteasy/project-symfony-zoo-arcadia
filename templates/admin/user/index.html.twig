{% extends 'metronic/layout/_default.html.twig' %}

{% block content %}
    <script>const data_csrf_delete= '{{ csrf_token('delete-item') }}'</script>
<div class="card">
    <div class="card-header">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <span class="position-absolute ms-6"><i class="las la-edit fs-2" ></i></span>
                <input type="text" data-kt-docs-table-filter="search" class="form-control  w-250px ps-14 " placeholder="Rechercher">
            </div>
            <div class="my-1 pe-1 w-250px">
                <select id="filter_role_value" class="form-select" data-control="select2" data-allow-clear="true"  data-placeholder="Filtrer par role" datatable-redraw="true">
                    <option></option>
                    <option value="ROLE_EMPLOYE">Employé</option>
                    <option value="ROLE_VETO">Vétérinaire</option>


                </select>
            </div>
        </div>
            <div class="card-toolbar">
                <a  href="{{ path('app_admin_user_new', {'type': 'employe'}) }}" class="btn btn-primary me-2">Ajouter un employé</a>
                <a  href="{{ path('app_admin_user_new', {'type': 'veto'}) }}" class="btn btn-primary me-2">Ajouter un vétérinaire</a>
            </div>

    </div>
<div class="card-body">
    <table id="kt_datatable" class="table align-middle table-row-dashed fs-6 gy-5">
        <thead>
        <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
            <th class="text-start">email</th>
            <th class="text-start">firstname</th>
            <th class="text-start">lastname</th>
            <th class="text-start">Role</th>

            <th class="text-end min-w-100px">Actions</th>
        </tr>
        </thead>
        <tbody class="text-gray-600 fw-bold">
        </tbody>
    </table>
</div>
</div>
{% endblock %}
{% block javascripts_embed %}
    <script>
        let jsCustomConfig = {{ jsCustomConfig | json_encode | raw }};
        KTUtil.onDOMContentLoaded(function () {
            initDatatable();
        });
    </script>
{% endblock %}
